<% layout('layout') -%>

<style>
  .edit-profile-section {
    background-color: #fef8f5;
    padding: 80px 20px;
    font-family: "Raleway", sans-serif;
    display: flex;
    justify-content: center;
  }

  .edit-profile-container {
    background-color: #fff;
    border-radius: 20px;
    box-shadow: 0 10px 30px rgba(0, 0, 0, 0.05);
    padding: 40px 30px;
    max-width: 600px;
    width: 100%;
    text-align: center;
  }

  .edit-profile-container h2 {
    font-family: "Playfair Display", serif;
    font-size: 2.3rem;
    color: #8b5e3c;
    margin-bottom: 2rem;
  }

  .edit-form {
    display: flex;
    flex-direction: column;
    gap: 1.5rem;
  }

  .form-group {
    text-align: left;
  }

  .form-group label {
    display: block;
    font-weight: 600;
    color: #8b5e3c;
    margin-bottom: 0.5rem;
  }

  .form-control {
    width: 100%;
    padding: 10px 14px;
    border-radius: 10px;
    border: 1px solid #ccc;
    font-size: 1rem;
  }

  .edit-buttons {
    display: flex;
    gap: 1rem;
    flex-wrap: wrap;
    justify-content: center;
    margin-top: 20px;
  }

  .btn-custom {
    background-color: #8b5e3c;
    color: #fff;
    border: none;
    padding: 10px 24px;
    border-radius: 30px;
    text-decoration: none;
    font-weight: 600;
    transition: 0.3s ease;
    cursor: pointer;
  }

  .btn-custom:hover {
    background-color: #6d4529;
    color: #fff;
  }

  .btn-custom.outline {
    background: none;
    border: 2px solid #8b5e3c;
    color: #8b5e3c;
  }

  .btn-custom.outline:hover {
    background-color: #8b5e3c;
    color: #fff;
  }

  @media (max-width: 768px) {
    .edit-profile-container {
      padding: 30px 20px;
    }
  }
</style>

<section class="edit-profile-section">
  <div class="edit-profile-container">
    <h2>Edit Your Profile</h2>

    <form action="/profile/edit" method="POST" class="edit-form">
      <div class="form-group">
        <label for="firstName">First Name</label>
        <input
          type="text"
          name="firstName"
          id="firstName"
          class="form-control"
          value="<%= currentUser.firstName || '' %>"
          required
        />

        <label for="lastName">Last Name</label>
        <input
          type="text"
          name="lastName"
          id="lastName"
          class="form-control"
          value="<%= currentUser.lastName || '' %>"
          required
        />
      </div>

      <div class="form-group">
        <label for="email">Email</label>
        <input
          type="email"
          name="email"
          id="email"
          class="form-control"
          value="<%= currentUser.email || '' %>"
          required
        />
      </div>

      <div class="form-group">
        <label for="phone">Phone Number</label>
        <input
          type="text"
          name="phone"
          id="phone"
          class="form-control"
          value="<%= currentUser.phone || '' %>"
        />
      </div>

      <div class="edit-buttons">
        <button type="submit" class="btn-custom">Save Changes</button>
        <a href="/profile" class="btn-custom outline">Cancel</a>
      </div>
    </form>
  </div>
</section>
